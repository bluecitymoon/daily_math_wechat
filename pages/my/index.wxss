/* pages/my/index.wxss - 现代化用户资料页面样式 */

page {
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: #f1f1f1;
  min-height: 100vh;
}

.profile-page {
  min-height: 100vh;
  background-color: #f1f1f1;
}

/* 头部用户信息区域 */
.profile-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-background {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #1bd0ad;
  z-index: 1;
}

.header-content {
  position: relative;
  height: 100%;
  padding: 60rpx 32rpx 40rpx;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 用户基本信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.avatar-container {
  position: relative;
  flex-shrink: 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.avatar-edit-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.edit-icon {
  font-size: 20rpx;
}

.user-basic-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.name-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 1.2;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.edit-name-btn {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-title {
  margin-bottom: 8rpx;
}

.title-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.3;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-subtitle {
  margin-bottom: 16rpx;
}

.subtitle-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 用户统计信息 */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 主要内容区域 */
.main-content {
  padding: 0 24rpx 40rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 0;
}

.header-left {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
}

.header-right {
  flex-shrink: 0;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background: #1bd0ad;
  border-radius: 20rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 信息列表 */
.info-list {
  padding: 24rpx 32rpx 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f3f4;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #636e72;
  flex-shrink: 0;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #2d3436;
  text-align: right;
  flex: 1;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 功能按钮区域 */
.function-section {
  margin-top: 32rpx;
}

.function-btn {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.function-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.share-btn {
  background: #ffffff;
  border: none;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  text-align: left;
}

.btn-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.btn-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.btn-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
}

.btn-desc {
  font-size: 24rpx;
  color: #636e72;
}

.btn-arrow {
  font-size: 36rpx;
  color: #b2bec3;
  font-weight: 300;
}

/* 登录弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 540rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 1001;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 16rpx;
  display: block;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #636e72;
  display: block;
}

.modal-image {
  width: 400rpx;
  height: 270rpx;
  background: url("https://bmob-cdn-24322.bmobcloud.com/2019/07/25/f6e77de940d2441180ade9cacb7daf13.png") no-repeat center;
  background-size: contain;
  margin: 0 auto 40rpx;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.modal-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #ffffff;
  color: #1bd0ad;
  border: 2rpx solid #1bd0ad;
}

.confirm-btn {
  background: #1bd0ad;
  color: #ffffff;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
}

/* 重置按钮样式 */
button::after {
  border: none;
}

button {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
  font-size: inherit;
  color: inherit;
}

input {
  outline: none;
  border: none;
  list-style: none;
}