/* pages/my/edit-profile.wxss */

page {
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color: #f1f1f1;
  min-height: 100vh;
}

.edit-profile-page {
  min-height: 100vh;
  background-color: #f1f1f1;
}

/* 页面头部 */
.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.header-left {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-btn {
  font-size: 48rpx;
  color: #1bd0ad;
  font-weight: 300;
}

.header-center {
  flex: 1;
  text-align: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
}

.header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.save-btn {
  font-size: 28rpx;
  color: #1bd0ad;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  margin-top: 88rpx;
  padding: 32rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 表单组 */
.form-group {
  padding: 32rpx;
  border-bottom: 1rpx solid #f1f3f4;
  display: flex;
  align-items: center;
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #636e72;
  width: 160rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #2d3436;
  padding: 16rpx 0;
  border: none;
  outline: none;
}

.form-input::placeholder {
  color: #b2bec3;
}

/* 选择器样式 */
.picker-input {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.picker-text {
  font-size: 28rpx;
  color: #2d3436;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #b2bec3;
}

.picker-arrow {
  font-size: 32rpx;
  color: #b2bec3;
  font-weight: 300;
}

/* 保存按钮区域 */
.save-section {
  padding: 32rpx;
  margin-top: 32rpx;
}

.save-button {
  width: 100%;
  height: 96rpx;
  background: #1bd0ad;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(27, 208, 173, 0.3);
  border: none;
}

.save-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.save-button.loading {
  opacity: 0.7;
}

.save-button[disabled] {
  opacity: 0.7;
}

/* 重置按钮样式 */
button::after {
  border: none;
}

button {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
  font-size: inherit;
  color: inherit;
}

input {
  outline: none;
  border: none;
  list-style: none;
}
