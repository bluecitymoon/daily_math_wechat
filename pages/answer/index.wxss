/* pages/answer/index.wxss */
page {
    width: 100%;
    height: 100%;
}

.page {
    width: 100%;
    height: 100%;
    background: #f0f7f0;
    display: flex;
    flex-direction: column;
    left: 0;
    right: 0;
    bottom: 0;
}

.flexauto {
    width: 100%;
    height: 70%;
}

.noflex {
    width: 100%;
    height: 100%;
}

.all-wrap {
    background: #f0f7f0;
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    margin-left: 0;
}

.answer-wrap {
    background: #fafff8;
}

.answer-title {
    padding: 30rpx 35rpx 35rpx 25rpx;
    position: relative;
    min-height: 80rpx;
}

.answer-title view {
    font-size: 32rpx;
    line-height: 54rpx;
    margin-top: 20rpx;
}

/* 题目描述容器样式 */
.question-description {
    margin-top: 10rpx;
    padding-top: 10rpx;
    width: 100%;
    position: relative;
    z-index: 1;
    margin-left: 120rpx;
    padding-right: 35rpx;
}

/* rich-text中的图片样式 */
.answer-title rich-text img {
    max-width: 100% !important;
    height: auto !important;
    display: block;
    margin: 10rpx 0;
}

/* 题目类型标签样式 */
.question-type-label {
    font-size: 22rpx;
    font-weight: 500;
    color: #1bd0ad;
    background: #e6f9f5;
    border: 1rpx solid #1bd0ad;
    border-radius: 6rpx;
    padding: 4rpx 12rpx;
    display: inline-block;
    position: absolute;
    left: 25rpx;
    top: 30rpx;
    z-index: 2;
    max-width: 80rpx;
}

.answer-title image {
    width: 74rpx;
    height: 30rpx;
    position: absolute;
    left: 0;
    top: 45rpx;
}

.answer-ziyuan {
    margin-left: 25rpx;
    margin-right: 25rpx;
    padding-bottom: 20rpx;
}

.answer-ziyuan image {
    width: 100%;
    height: 350rpx;
    border-radius: 12rpx;
}

.answer-select {
    font-size: 28rpx;
    color: #3f3f3f;
}

.answer-select .answer-left {
    width: 22px;
    height: 22px;
}

.answer-select .option {
    width: 20px;
    height: 20px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid #e4e4e4;
    text-align: center;
    line-height: 20px;
}

.answer-select .option-active {
    width: 20px;
    height: 20px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid #1bd0ad;
    text-align: center;
    line-height: 20px;
    color: #fff;
    background: #1bd0ad;
}

.answer-select .option-green {
    width: 20px;
    height: 20px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid #33c500;
    text-align: center;
    line-height: 20px;
    color: #fff;
    background: #33c500;
}

.direction {
    display: flex;
    padding: 16px 17.5px;
}

.answer-select .answer-right {
    margin-left: 17.5px;
    line-height: 24px;
    width: 90%;
}

.answer-select .answer-right .text-active {
    color: #1bd0ad;
}

.answer-select .answer-right .green-active {
    color: #33c500;
}

.answer-select .answer-right .red-active {
    color: #ff3030;
}

.answer-select image {
    width: 100%;
    height: 100%;
    display: inline-block;
}

/* 选项图片样式 */
.option-image {
    width: 100%;
    height: auto;
    min-height: 400rpx;
    border: 2rpx solid #e4e4e4;
    border-radius: 12rpx;
    display: block;
}

.option-image.active-border {
    border: 2rpx solid #1bd0ad;
}

.option-image.green-border {
    border: 2rpx solid #33c500;
}

.option-image.red-border {
    border: 2rpx solid #ff3030;
}

.answer-ziyuan .helpPic{
  width: 100%;
  height: 350rpx;
  display: inline-block;
  border-radius: 12rpx;
}

.direction:nth-child(odd) {
    background: #f5faf5;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    border-top: 1px solid #f7f7f7;
    z-index: 12;
}

.footer .header {
    height: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 25rpx;
    padding-right: 25rpx;
}

.footer .header image {
    width: 18px;
    height: 18px;
    margin-right: 5px;
}

.footer .header>view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
}

.footer .header>view view {
    display: flex;
    align-items: center;
}

.footer .header .h-left {
    width: 60%;
    height: 100%;
}

.footer .header .h-right {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: center;
}

.sunup {
    background: #1bd0ad;
    margin-left: 76rpx;
    margin-right: 76rpx;
    text-align: center;
    line-height: 82rpx;
    border-radius: 5px;
    color: #fff;
    margin-top: 35rpx;
    margin-bottom: 35rpx;
    font-size: 36rpx;
}

.next-btn {
    background: #1bd0ad;
    margin-left: 76rpx;
    margin-right: 76rpx;
    text-align: center;
    line-height: 82rpx;
    border-radius: 5px;
    color: #fff;
    margin-top: 35rpx;
    margin-bottom: 35rpx;
    font-size: 32rpx;
}

.wrap-icon {
    height: 0;
    transition: all .5s linear;
}

.wrap-icon-active {
    height: 999rpx;
    transition: all .5s linear;
}

.footer-mark {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 11;
}

.showzh {
    visibility: hidden;
}

.showzh-active {
    visibility: visible;
}

.icon-circle .circle-title {
    background: #f3f3f3;
    height: 75rpx;
    font-size: 26rpx;
    color: #888;
    padding-left: 25rpx;
    line-height: 75rpx;
}

.icon-circle .circle-wrap {
    display: flex;
    flex-wrap: wrap;
    font-size: 25rpx;
    margin-left: 25rpx;
    margin-right: 25rpx;
    padding-bottom: 20rpx;
}

.icon-circle .circle-wrap .now {
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #dfdfdf;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    color: #8c8c8c;
    margin-left: 10rpx;
    margin-top: 20rpx;
}

.icon-circle .circle-wrap .red {
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #fb9191;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    color: #fb9191;
    margin-left: 10rpx;
    margin-top: 20rpx;
    background: #fedddd;
}

.icon-circle .circle-wrap .green {
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #72dd70;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    color: #72dd70;
    margin-left: 10rpx;
    margin-top: 20rpx;
    background: #daf6da;
}

.icon-circle .circle-wrap .blue {
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #53bcff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    color: #53bcff;
    margin-left: 10rpx;
    margin-top: 20rpx;
}

.explanation {
    border-top: 20rpx solid #f0f7f0;
    padding-bottom: 15%;
}

.explanation-title {
    display: flex;
    justify-content: space-between;
    padding-left: 24rpx;
    padding-right: 24rpx;
    padding-top: 38rpx;
    padding-bottom: 38rpx;
}

.explanation-title image {
    width: 26rpx;
    height: 25rpx;
}

.explanation-title .explanation-left {
    font-size: 26rpx;
    border-left: 6rpx solid #0093f0;
    height: 26rpx;
    line-height: 24rpx;
    padding-left: 18rpx;
}

.explanation-title .explanation-right {
    font-size: 26rpx;
    height: 26rpx;
    color: #8c8c8c;
}

.explanation-text {
    font-size: 30rpx;
    color: #3f3f3f;
    padding-left: 24rpx;
    padding-right: 24rpx;
    padding-bottom: 20rpx;
    line-height: 25px;
}

/* rich-text中的图片样式（帮助区域） */
.explanation-text rich-text img {
    max-width: 100% !important;
    height: auto !important;
    display: block;
    margin: 10rpx 0;
}

.address-green {
    background: #fcdec6;
    height: 30px;
    position: fixed;
    top: 62rpx;
    width: 100%;
    line-height: 30px;
    left: 0;
    color: #fa955b;
    font-size: 14px;
    text-indent: 10px;
    z-index: 999;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

