/* pages/category/index.wxss */
page {
  background: #f1f1f1;
  min-height: 100vh;
}

.container {
  padding: 24rpx;
}

/* 分类列表 */
.category-list {
  margin-top: 0;
}

/* 分类卡片 */
.category-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: #1bd0ad;
}

.completed-card::before {
  background: #43e97b;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.category-number {
  width: 64rpx;
  height: 64rpx;
  background: #1bd0ad;
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.completed-card .category-number {
  background: #43e97b;
}

.category-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  line-height: 44rpx;
  margin-bottom: 6rpx;
  word-break: break-all;
}

.category-subtitle {
  font-size: 24rpx;
  color: #636e72;
}

.header-right {
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 状态徽章 */
.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-badge.completed {
  background: #43e97b;
  color: #ffffff;
}

.status-badge.in_progress {
  background: #feca57;
  color: #ffffff;
}

.status-badge.not_started {
  background: #dfe6e9;
  color: #636e72;
}

/* 进度条区域 */
.progress-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #f0f3f7;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: #1bd0ad;
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.completed-card .progress-fill {
  background: #43e97b;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #1bd0ad;
  min-width: 72rpx;
  text-align: right;
}

.completed-card .progress-text {
  color: #43e97b;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 统计信息 */
.stats-section {
  display: flex;
  gap: 32rpx;
  flex: 1;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3436;
  line-height: 40rpx;
  margin-bottom: 4rpx;
}

.stat-value.high-accuracy {
  color: #00b894;
}

.stat-label {
  font-size: 22rpx;
  color: #636e72;
}

.stat-label-empty {
  font-size: 26rpx;
  color: #b2bec3;
  font-style: italic;
}

/* 星级评价 */
.stars-section {
  margin-left: 16rpx;
}

.stars {
  display: flex;
  gap: 4rpx;
  align-items: center;
}

.star-icon {
  width: 32rpx;
  height: 32rpx;
  transition: opacity 0.2s ease;
}

.star-icon.star-active {
  opacity: 1;
}

.star-icon.star-inactive {
  opacity: 0.2;
  filter: grayscale(1);
}

/* 箭头指示器 */
.arrow-indicator {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.3;
}

.arrow-icon {
  width: 24rpx;
  height: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 按压效果 */
.category-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
